type: dhcpv4
{{#if port}}
ports:
{{#each port as |p|}}
  - {{p}}
{{/each}}
{{/if}}
fields_under_root: true
fields:
  _conf:
    geoip_enrich: {{geoip_enrich}}
{{#if keep_null}}
keep_null: {{keep_null}}
{{/if}}
{{#if processors}}
processors:
{{processors}}
{{/if}}
{{#if tags}}
tags:
{{#each tags as |tag|}}
  - {{tag}}
{{/each}}
{{/if}}
{{#if monitor_processes}}
procs:
  enabled: true
{{/if}}
{{#if interface}}
interface:
{{#if (contains ".pcap" interface)}}
  file: {{interface}}
{{else}}
  device: {{interface}}
{{/if}}
{{/if}}
