type: flow
{{#if timeout}}
timeout: '{{timeout}}'
{{/if}}
{{#if period}}
period: '{{period}}'
{{/if}}
fields_under_root: true
fields:
  _conf:
    geoip_enrich: {{geoip_enrich}}
{{#if tags}}
tags:
{{#each tags as |tag|}}
  - {{tag}}
{{/each}}
{{/if}}
{{#contains "forwarded" tags}}
publisher_pipeline.disable_host: true
{{/contains}}
processors:
- add_observer_metadata:
{{#if monitor_processes}}
procs:
  enabled: true
{{/if}}
{{#if processors}}
processors:
{{processors}}
{{/if}}
{{#if interface}}
interface:
{{#if (contains ".pcap" interface)}}
  file: {{interface}}
{{else}}
  device: {{interface}}
{{/if}}
{{/if}}
{{#if never_install}}
npcap:
  never_install: true
{{/if}}
