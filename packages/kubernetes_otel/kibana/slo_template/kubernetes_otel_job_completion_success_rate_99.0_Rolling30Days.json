{
  "attributes": {
    "name": "[Kubernetes OTel] Job Completion Success Rate 99.0% Rolling 30 Days",
    "description": "This SLO tracks the success rate of Kubernetes Jobs via OTel metrics, ensuring that 99.0% of time intervals show Jobs completing without failures over a rolling period of 30 days. Jobs represent batch workloads (ETL, backups, data pipelines, scheduled tasks) with clear completion semantics.",
    "indicator": {
      "type": "sli.metric.timeslice",
      "params": {
        "index": "metrics-*",
        "filter": "data_stream.dataset: \"k8sclusterreceiver.otel\" AND k8s.job.failed_pods : *",
        "metric": {
          "metrics": [
            {
              "name": "A",
              "aggregation": "max",
              "field": "k8s.job.failed_pods",
              "filter": ""
            }
          ],
          "equation": "A",
          "comparator": "LTE",
          "threshold": 0
        },
        "timestampField": "@timestamp"
      }
    },
    "budgetingMethod": "timeslices",
    "timeWindow": {
      "duration": "30d",
      "type": "rolling"
    },
    "objective": {
      "target": 0.99,
      "timesliceTarget": 0.95,
      "timesliceWindow": "5m"
    },
    "tags": [
      "k8s",
      "kubernetes",
      "otel"
    ],
    "groupBy": [
      "resource.attributes.k8s.namespace.name"
    ],
    "artifacts": {
      "dashboards": [
        {
          "id": "kubernetes_otel-cluster-overview"
        }
      ]
    }
  },
  "id": "kubernetes_otel_job_completion_success_rate_99.0_Rolling30Days",
  "type": "slo_template"
}
