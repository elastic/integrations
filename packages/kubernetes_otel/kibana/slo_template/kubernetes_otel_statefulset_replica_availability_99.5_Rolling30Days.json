{
  "attributes": {
    "name": "[Kubernetes OTel] StatefulSet Replica Availability 99.5% Rolling 30 Days",
    "description": "This SLO tracks the availability of Kubernetes StatefulSets via OTel metrics, ensuring that 99.5% of time intervals have each StatefulSet meeting its desired replica count over a rolling period of 30 days. StatefulSets manage stateful workloads (databases, message queues, caches) where pod identity and ordering matter â€” making availability critical for data integrity.",
    "indicator": {
      "type": "sli.metric.timeslice",
      "params": {
        "index": "metrics-*",
        "filter": "data_stream.dataset : \"k8sclusterreceiver.otel\" AND k8s.statefulset.ready_pods: * AND k8s.statefulset.desired_pods : *",
        "metric": {
          "metrics": [
            {
              "name": "A",
              "aggregation": "avg",
              "field": "k8s.statefulset.ready_pods",
              "filter": ""
            },
            {
              "name": "B",
              "aggregation": "avg",
              "field": "k8s.statefulset.desired_pods",
              "filter": ""
            }
          ],
          "equation": "A / B",
          "comparator": "GTE",
          "threshold": 1
        },
        "timestampField": "@timestamp"
      }
    },
    "budgetingMethod": "timeslices",
    "timeWindow": {
      "duration": "30d",
      "type": "rolling"
    },
    "objective": {
      "target": 0.995,
      "timesliceTarget": 0.95,
      "timesliceWindow": "5m"
    },
    "tags": [
      "kubernetes",
      "k8s",
      "otel"
    ],
    "groupBy": [
      "resource.attributes.k8s.statefulset.name"
    ],
    "artifacts": {
      "dashboards": [
        {
          "id": "kubernetes_otel-cluster-overview"
        }
      ]
    }
  },
  "id": "[Kubernetes OTel] StatefulSet Replica Availability 99.5% Rolling 30 Days",
  "type": "slo_template"
}
