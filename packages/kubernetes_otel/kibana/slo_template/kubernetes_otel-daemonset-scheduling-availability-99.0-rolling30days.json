{
  "attributes": {
    "name": "[Kubernetes OTel] DaemonSet Scheduling Availability 99.0% Rolling 30 Days",
    "description": "This SLO tracks the scheduling availability of Kubernetes DaemonSets via OTel metrics, ensuring that 99.0% of time intervals have each DaemonSet running on all eligible nodes over a rolling period of 30 days. DaemonSets are critical for node-level infrastructure services (monitoring agents, log collectors, security agents, network plugins).",
    "indicator": {
      "type": "sli.metric.timeslice",
      "params": {
        "index": "metrics-*",
        "filter": "data_stream: \"k8sclusterreceiver.otel\" and k8s.daemonset.ready_nodes: * and k8s.daemonset.desired_scheduled_nodes : *",
        "metric": {
          "metrics": [
            {
              "name": "A",
              "aggregation": "sum",
              "field": "k8s.daemonset.ready_nodes",
              "filter": ""
            },
            {
              "name": "B",
              "aggregation": "sum",
              "field": "k8s.daemonset.desired_scheduled_nodes",
              "filter": ""
            }
          ],
          "equation": "A / B",
          "comparator": "GTE",
          "threshold": 1
        },
        "timestampField": "@timestamp"
      }
    },
    "budgetingMethod": "timeslices",
    "timeWindow": {
      "duration": "30d",
      "type": "rolling"
    },
    "objective": {
      "target": 0.99,
      "timesliceTarget": 0.95,
      "timesliceWindow": "5m"
    },
    "tags": [
      "k8s",
      "kubernetes",
      "otel"
    ],
    "groupBy": [
      "resource.attributes.k8s.daemonset.name"
    ],
    "artifacts": {
      "dashboards": [
        {
          "id": "kubernetes_otel-cluster-overview"
        }
      ]
    }
  },
  "id": "kubernetes_otel-daemonset-scheduling-availability-99.0-rolling30days",
  "type": "slo_template"
}
