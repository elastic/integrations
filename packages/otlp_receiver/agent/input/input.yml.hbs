receivers:
  # TODO: More settings from https://github.com/open-telemetry/opentelemetry-collector/tree/main/receiver/otlpreceiver
  otlp:
    protocols:
      grpc:
        endpoint: "{{listen_address_grpc}}"
      http:
        endpoint: "{{listen_address_http}}"

service:
  pipelines:
    logs:
      receivers: [otlp]
      processors: []
    metrics:
      receivers: [otlp]
      processors: []
    traces:
      receivers: [otlp]
      processors: []
