{
  "id": "elastic-agent-high-disk-io-usage",
  "type": "alerting_rule_template",
  "attributes": {
    "name": "[Elastic Agent] High disk I/O usage",
    "tags": ["Elastic Agent", "Disk I/O"],
    "ruleTypeId": ".es-query",
    "schedule": {
      "interval": "1m"
    },
    "params": {
      "searchType": "esqlQuery",
      "timeWindowSize": 5,
      "timeWindowUnit": "m",
      "threshold": [0],
      "thresholdComparator": ">",
      "size": 100,
      "esqlQuery": {
        "esql": "TS metrics-*\n| WHERE data_stream.dataset == \"system.diskio\"\n| STATS diskio_rate = SUM(RATE(system.diskio.io.time)) BY time_bucket = bucket(@timestamp,1min), elastic_agent.id, system.diskio.name\n| EVAL pct_diskio_per_min = (diskio_rate / 60000) * 100\n| WHERE pct_diskio_per_min > 80"
      },
      "aggType": "count",
      "groupBy": "row",
      "termSize": 5,
      "sourceFields": [],
      "timeField": "@timestamp",
      "excludeHitsFromPreviousRun": true
    },
    "alertDelay": {
      "active": 1
    }
  },
  "coreMigrationVersion": "8.8.0",
  "typeMigrationVersion": "10.1.0"
}
