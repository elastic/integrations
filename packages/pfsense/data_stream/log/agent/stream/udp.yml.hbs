host: "{{syslog_host}}:{{syslog_port}}"
{{#if udp_options}}
{{udp_options}}
{{/if}}
tags:
{{#if preserve_original_event}}
  - preserve_original_event
{{/if}}
{{#each tags as |tag i|}}
  - {{tag}}
{{/each}}
{{#contains "forwarded" tags}}
publisher_pipeline.disable_host: true
{{/contains}}
processors:
- add_locale: ~
- add_fields:
    target: _tmp
    fields:
      tz_offset: "{{tz_offset}}"
{{#if internal_networks.length}}
      internal_networks:
        {{#each internal_networks as |ntwrk i|}}
        - {{ntwrk}}
        {{/each}}
{{/if}}
{{#if processors}}
{{processors}}
{{/if}}