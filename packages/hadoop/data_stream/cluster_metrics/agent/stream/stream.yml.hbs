metricsets: ["json"]
namespace: "cluster_metrics"
hosts:
{{#each hosts}}
  - "{{this}}/jmx?qry=Hadoop:service=ResourceManager,name=ClusterMetrics"
  - "{{this}}/ws/v1/cluster/metrics"
{{/each}}
period: {{period}}
path: "/"
{{#if proxy_url}}
proxy_url: {{proxy_url}}
{{/if}}
{{#if ssl}}
certificate_authorities: {{ssl}}
{{/if}}
tags:
{{#each tags as |tag i|}}
  - {{tag}}
{{/each}}
{{#contains "forwarded" tags}}
publisher_pipeline.disable_host: true
{{/contains}}
{{#if processors}}
processors:
{{processors}}
{{/if}}