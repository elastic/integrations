{{/if}}
{{#if secret_value}}
secret.value: {{secret_value}}
{{/if}}
{{#if max_in_flight_bytes}}
max_in_flight_bytes: {{max_in_flight_bytes}}
{{/if}}
{{#if retry_after}}
retry_after: {{retry_after}}
{{/if}}
