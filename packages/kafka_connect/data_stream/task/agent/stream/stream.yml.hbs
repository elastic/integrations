metricsets: ["jmx"]
hosts:
{{#each hosts}}
  - {{this}}
{{/each}}
path: {{path}}
period: {{period}}
{{#if username}}
username: {{username}}
{{/if}}
{{#if password}}
password: {{password}}
{{/if}}
namespace: "kafka_connect"
jmx.mappings:
  - mbean: 'kafka.connect:type=*-task-metrics,connector=*,task=*'
    attributes:
      - attr: batch-size-avg
        field: task.batch_size_avg
      - attr: batch-size-max
        field: task.batch_size_max
      - attr: offset-commit-avg-time-ms
        field: task.offset_commit_avg_time_ms
      - attr: offset-commit-failure-percentage
        field: task.offset_commit_failure_percentage
      - attr: offset-commit-max-time-ms
        field: task.offset_commit_max_time_ms
      - attr: offset-commit-success-percentage
        field: task.offset_commit_success_percentage
      - attr: pause-ratio
        field: task.pause_ratio
      - attr: running-ratio
        field: task.running_ratio
      - attr: status
        field: task.status
      - attr: sink-record-read-total
        field: task.sink_record_read_total
      - attr: sink-record-send-total
        field: task.sink_record_send_total
      - attr: source-record-write-total
        field: task.source_record_write_total
      - attr: source-record-poll-total
        field: task.source_record_poll_total
      - attr: deadletterqueue-produce-failures
        field: task.deadletterqueue_produce_failures
      - attr: deadletterqueue-produce-requests
        field: task.deadletterqueue_produce_requests
      - attr: last-error-timestamp
        field: task.last_error_timestamp
      - attr: total-errors-logged
        field: task.total_errors_logged
      - attr: total-record-errors
        field: task.total_record_errors
      - attr: total-record-failures
        field: task.total_record_failures
      - attr: total-records-skipped
        field: task.total_records_skipped
      - attr: total-retries
        field: task.total_retries
    event:
      - attr: connector
        field: task.connector
      - attr: task
        field: task.id
tags:
{{#each tags as |tag|}}
  - {{tag}}
{{/each}}
{{#if ssl}}
{{ssl}}
{{/if}}
{{#if processors}}
processors:
{{processors}}
{{/if}}
