metricsets: ["jmx"]
hosts:
{{#each hosts}}
  - {{this}}
{{/each}}
path: {{path}}
period: {{period}}
{{#if username}}
username: {{username}}
{{/if}}
{{#if password}}
password: {{password}}
{{/if}}
namespace: "kafka_connect"
jmx.mappings:
  - mbean: 'kafka.connect:type=connector-metrics,connector=*'
    attributes:
      - attr: connector-type
        field: connector.type
      - attr: connector-class
        field: connector.class
      - attr: connector-version
        field: connector.version
      - attr: status
        field: connector.status
    event:
      - attr: connector
        field: connector.name
tags:
{{#each tags as |tag|}}
  - {{tag}}
{{/each}}
{{#if ssl}}
{{ssl}}
{{/if}}
{{#if processors}}
processors:
{{processors}}
{{/if}}
