config_version: 2
interval: {{interval}}
auth.oauth2:
    client.id: {{client_id}}
    client.secret: {{client_secret}}
    provider: azure
    scopes:
{{#each token_scopes as |token_scope|}}
      - {{token_scope}}
{{/each}}
    endpoint_params: 
        grant_type: client_credentials
{{#if token_url}}
    token_url: {{token_url}}/{{azure_tenant_id}}/oauth2/v2.0/token
{{else if azure_tenant_id}}
    azure.tenant_id: {{azure_tenant_id}}
{{/if}}

resource.url: {{url}}
{{#if resource_ssl}}
resource.ssl: 
  {{resource_ssl}}
{{/if}}
{{#if resource_timeout}}
resource.timeout: {{resource_timeout}}
{{/if}}
{{#if proxy_url}}
resource.proxy_url: {{proxy_url}}
{{/if}}
{{#if resource_retry_max_attempts}}
resource.retry.max_attempts: {{resource_retry_max_attempts}}
{{/if}}
{{#if resource_retry_wait_min}}
resource.retry.wait_min: {{resource_retry_wait_min}}
{{/if}}
{{#if resource_retry_wait_max}}
resource.retry.wait_max: {{resource_retry_wait_max}}
{{/if}}
{{#if resource_redirect_forward_headers}}
resource.redirect.forward_headers: {{resource_redirect_forward_headers}}
{{/if}}
{{#if resource_redirect_headers_ban_list}}
resource.redirect.headers_ban_list:
{{#each resource_redirect_headers_ban_list as |item|}}
  - {{item}}
{{/each}}
{{/if}}
{{#if resource_redirect_max_redirects}}
resource.redirect.max_redirects: {{resource_redirect_max_redirects}}
{{/if}}
{{#if resource_rate_limit_limit}}
resource.rate_limit.limit: {{resource_rate_limit_limit}}
{{/if}}
{{#if resource_rate_limit_burst}}
resource.rate_limit.burst: {{resource_rate_limit_burst}}
{{/if}}
{{#if enable_request_tracer}}
resource.tracer.filename: "../../logs/cel/http-request-trace-*.ndjson"
{{/if}}

tags:
{{#if preserve_original_event}}
  - preserve_original_event
{{/if}}
{{#each tags as |tag|}}
  - {{tag}}
{{/each}}
{{#contains "forwarded" tags}}
publisher_pipeline.disable_host: true
{{/contains}}
{{#if processors}}
processors:
{{processors}}
{{/if}}

state:
  want_more: false
  base:
    tenant_id: "{{azure_tenant_id}}"
    period: "{{period}}"

redact:
  fields:
    - base.tenant_id

program: |
    state.with(
      request(
        "GET",
        state.url + "directory/onPremisesSynchronization"
      ).do_request().as(sync_resp,
        sync_resp.StatusCode == 200
        ?
          bytes(sync_resp.Body).decode_json().as(sync_body, 
            request(
              "GET",
              state.url + "/organization"
            ).do_request().as(org_resp,
              org_resp.StatusCode == 200
              ?
                bytes(org_resp.Body).decode_json().as(org_body,
                  {
                    "events": {
                      "onPremisesSync": sync_body.value.map(e, {"message": e.encode_json()}),
                      "onPremisesLastSyncDateTime": org_body.value[0].onPremisesLastSyncDateTime
                      "onPremisesSyncEnabled": org_body.value[0].onPremisesSyncEnabled
                    }
                  }
                )
              :
                {
                  "events": {
                    "error": {
                      "code": string(org_resp.StatusCode),
                      "id": string(org_resp.Status),
                      "message": "GET /organization: " + (
                        size(org_resp.Body) != 0 ? 
                          string(org_resp.Body)
                        :
                          string(org_resp.Status) + ' (' + string(org_resp.StatusCode) + ')'
                      ),
                    }
                  },
                  "want_more": false,
                }
            )
          )
        :
          {
            "events": {
              "error": {
                "code": string(sync_resp.StatusCode),
                "id": string(sync_resp.Status),
                "message": "GET /directory/onPremisesSynchronization: " + (
                  size(sync_resp.Body) != 0 ? 
                    string(sync_resp.Body)
                  :
                    string(sync_resp.Status) + ' (' + string(sync_resp.StatusCode) + ')'
                ),
              }
            },
            "want_more": false,
          }
      )
    )