        "id": "linux_crontab_persistence_elastic",
        "interval": "3600",
        "platform": "linux",
        "query": "SELECT event, minute, hour, day_of_month, month, day_of_week, command, path FROM crontab WHERE command LIKE '%curl%' OR command LIKE '%wget%' OR command LIKE '%bash -c%' OR command LIKE '%python%' OR command LIKE '%nc %' OR command LIKE '%ncat%' OR command LIKE '%/tmp/%' OR command LIKE '%chmod +x%' OR command LIKE '%base64%' OR path NOT LIKE '/etc/cron%' ORDER BY path, event;",
