paths:
{{#each paths as |path i|}}
  - {{path}}
{{/each}}
{{#if exclude_files.length}}
exclude_files:
{{#each exclude_files as |exclude_file i|}}
  - {{exclude_file}}
{{/each}}
{{/if}}
{{#if tags.length}}
tags:
{{#each tags as |tag|}}
  - {{tag}}
{{/each}}
{{#if preserve_original_event}}
  - preserve_original_event
{{/if}}
{{else}}
{{#if preserve_original_event}}
tags:
  - preserve_original_event
{{/if}}
{{/if}}
{{#contains "forwarded" tags}}
publisher_pipeline.disable_host: true
{{/contains}}
{{#if processors}}
processors:
{{processors}}
{{/if}}
{{#if ignore_older}}
ignore_older: {{ignore_older}}
{{/if}}
{{#if filestream_options}}
{{filestream_options}}
{{/if}}
