metricsets: ["json"]
namespace: "query_index"
hosts:
{{#each host_couchbase}}
  - "{{this}}/pools/default/buckets/@eventing/stats"
  - "{{this}}/pools/default/buckets/@index/stats"
  - "{{this}}/pools/default/buckets/@query/stats"
{{/each}}
{{#if ssl_couchbase}}
ssl:
  {{ssl_couchbase}}
{{/if}}
{{#if username}}
username: {{username}}
{{/if}}
{{#if password}}
password: {{password}}
{{/if}}
period: {{period}}
tags:
{{#each tags as |tag|}}
  - {{tag}}
{{/each}}
{{#if processors}}
processors:
{{processors}}
{{/if}}
