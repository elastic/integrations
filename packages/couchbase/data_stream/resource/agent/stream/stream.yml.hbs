metricsets: ["collector"]
hosts:
{{#each host_sync_gateway}}
  - {{this}}
{{/each}}
period: {{period}}
metrics_path: /metrics
metrics_filters:
  include: ["sgw_resource_utilization*","go_memstats_last_gc_time_seconds"]
{{#if username}}
username: {{username}}
{{/if}}
{{#if password}}
password: {{password}}
{{/if}}  
{{#if ssl_sync_gateway}}
ssl:
  {{ssl_sync_gateway}}
{{/if}}
tags:
{{#each tags as |tag|}}
  - {{tag}}
{{/each}}
{{#if processors}}
processors:
{{processors}}
{{/if}}
