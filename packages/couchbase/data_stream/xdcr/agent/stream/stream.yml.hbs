metricsets: ["json"]
namespace: "xdcr"
hosts:
{{#each host_couchbase as |host|}}
  {{#each ../buckets as |bucket|}}
    - "{{host}}/pools/default/buckets/{{bucket}}/stats"
  {{/each}}
{{/each}}
{{#if ssl_couchbase}}
ssl:
  {{ssl_couchbase}}
{{/if}}
{{#if username}}
username: {{username}}
{{/if}}
{{#if password}}
password: {{password}}
{{/if}}
period: {{period}}
tags:
{{#each tags as |tag|}}
  - {{tag}}
{{/each}}
{{#if processors}}
processors:
{{processors}}
{{/if}}
