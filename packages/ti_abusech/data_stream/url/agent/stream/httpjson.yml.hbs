config_version: "2"
interval: {{interval}}
request.method: "GET"
{{#if enable_request_tracer}}
request.tracer.filename: "../../logs/httpjson/http-request-trace-*.ndjson"
{{/if}}

{{#if ioc_expiry}}

{{#if ioc_expiry_url}}
request.url: {{ioc_expiry_url}}
{{/if}}

{{else}}

{{#if url}}
request.url: {{url}}
{{/if}}

{{/if}}

{{#if proxy_url }}
request.proxy_url: {{proxy_url}}
{{/if}}
{{#if ssl}}
request.ssl: {{ssl}}
{{/if}}
{{#if http_client_timeout}}
request.timeout: {{http_client_timeout}}
{{/if}}


{{#if ioc_expiry}}
request.transforms:
- set:
    target: header.Content-Type
    value: application/zip
- set:
    target: header.Accept
    value: '*/*'
response.decode_as: application/zip
response.transforms:
- set:
    target: body.temp_var
    value: '[[ sprintf "Time %s %s" (formatDate (now) "2006-01-02") (formatDate (now (parseDuration "-1d")) "2006-01-02") ]]'
- set:
    target: body.results
    value: '[[ toJSON .last_response.body ]]'
    default: '{"var1": false, "var2": "all", "var3":"true"}'
response.split:
  target: body.results
  type: map
{{else}}
request.transforms:
- set:
    target: header.Content-Type
    value: application/json
response.split:
  target: body.urls
{{/if}}

fields_under_root: true
fields:
  _conf:
    ioc_expiry: {{ioc_expiry}}
tags:
{{#if preserve_original_event}}
  - preserve_original_event
{{/if}}
{{#each tags as |tag i|}}
  - {{tag}}
{{/each}}
{{#contains "forwarded" tags}}
publisher_pipeline.disable_host: true
{{/contains}}
{{#if processors}}
processors:
{{processors}}
{{/if}}
