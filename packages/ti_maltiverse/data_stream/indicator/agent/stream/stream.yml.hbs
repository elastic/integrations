config_version: "2"
interval: {{ interval }}
request.method: "GET"
request.timeout: 50s
request.url: https://api.maltiverse.com/collection/{{ feed }}/download
{{#if api_token }}
request.transforms:
  - set:
      target: "header.Authorization"
      value: 'Bearer {{ api_token }}'
{{/if}}
response.split:
  target: body.blacklist
  keep_parent: true
fields_under_root: true
fields:
  feed: {{ feed }}
