protocol.unix:
  path: "{{syslog_path}}"
  {{#if group}}
  group: {{group}}
  {{/if}}
  mode: {{permissions}}
  line_delimiter: '{{line_delimiter}}'
  max_message_size: {{max_message_size}}
  {{#if max_active_connections}}
  max_connections: {{max_active_connections}}
  {{/if}}
  timeout: {{inactivity_timeout}}
processors:
  - add_locale: ~
