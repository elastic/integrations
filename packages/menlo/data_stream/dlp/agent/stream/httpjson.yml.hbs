config_version: 2
interval: {{interval}}
{{#if enable_request_tracer}}
request.tracer.filename: "../../logs/httpjson/http-request-trace-*.ndjson"
{{/if}}
request.method: POST
request.url: {{url}}
{{#if proxy_url}}
request.proxy_url: {{proxy_url}}
{{/if}}
request.transforms:
  - set:
      target: body.token
      value: {{token}}
  - set:
      target: body.log_type
      value: 'dlp'
  - set:
      target: url.params.start
      value: '[[(parseDate .cursor.last_requested_at).Unix]]'
      default: '[[(now (parseDuration "-{{initial_interval}}")).Unix]]'
      fail_on_template_error: true
  - set:
      target: url.params.end
      value: '[[(now).Unix]]'
      fail_on_template_error: true
  - set:
      target: url.params.limit
      value: {{batch_size}}
  - set:
      target: url.params.format
      value: 'json'
response.pagination:
  - set:
      target: url.params.start
      value: '[[.last_response.url.params.Get "start"]]'
      fail_on_template_error: true
  - set:
      target: url.params.end
      value: '[[.last_response.url.params.Get "end"]]'
      fail_on_template_error: true
  - set:
      target: body.pagingIdentifiers
      value: '[[.last_response.body.result.pagingIdentifiers]]'
cursor:
  last_requested_at:
    value: '[[.last_response.body.timestamp]]'
response.split:
  target: "body.result.events"
  ignore_empty_value: true
tags:
{{#if preserve_original_event}}
  - preserve_original_event
{{/if}}
{{#each tags as |tag|}}
  - {{tag}}
{{/each}}
{{#contains "forwarded" tags}}
publisher_pipeline.disable_host: true
{{/contains}}
{{#if processors}}
processors:
{{processors}}
{{/if}}
