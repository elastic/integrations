metricsets: ["pending_tasks"]
hosts:
{{#each hosts}}
  - {{this}}
{{/each}}
scope: {{scope}}
{{#if username}}
username: {{username}}
{{/if}}
{{#if password}}
password: {{password}}
{{/if}}
{{#if api_key}}
api_key: {{api_key}}
{{/if}}
period: {{period}}
{{#if ssl}}
ssl: {{ssl}}
{{/if}}
{{#if leaderelection }}
tags:
{{#each tags as |tag|}}
  - {{tag}}
{{/each}}
{{#if condition }}
condition: ${kubernetes_leaderelection.leader} == true and {{ condition }}
{{ else }}
condition: ${kubernetes_leaderelection.leader} == true
{{/if}}
{{ else }}
{{#if condition }}
condition: {{ condition }}
{{/if}}
{{/if}}
