metricsets: ["jmx"]
namespace: "metrics"
hosts: {{hosts}}
http_method: "GET"
path: {{path}}
username: {{username}}
password: {{password}}
period: {{period}}
{{#if ssl}}
ssl: {{ssl}}
{{/if}}
jmx.mappings:
  - mbean: 'java.lang:type=Threading'
    attributes:
    - attr: ThreadAllocatedMemorySupported
      field: allocated_memory.supported
    - attr: ThreadContentionMonitoringEnabled
      field: contention_monitoring.enabled
    - attr: ThreadAllocatedMemoryEnabled
      field: allocated_memory.enabled
    - attr: ThreadCpuTimeSupported
      field: cpu_time.supported
    - attr: ThreadContentionMonitoringSupported
      field: contention_monitoring.supported
    - attr: ThreadCount
      field: count
    - attr: ThreadCpuTimeEnabled
      field: cpu_time.enabled
    - attr: CurrentThreadAllocatedBytes
      field: current_thread.allocated_bytes
    - attr: CurrentThreadCpuTime
      field: current_thread.cpu_time
    - attr: CurrentThreadUserTime
      field: current_thread.user_time
    - attr: CurrentThreadCpuTimeSupported
      field: current_thread.cpu_time_supported
    - attr: TotalStartedThreadCount
      field: total_started_thread_count
    - attr: ObjectMonitorUsageSupported
      field: object_monitor_usage_supported
    - attr: SynchronizerUsageSupported
      field: synchronizer_usage_supported
    - attr: PeakThreadCount
      field: peak_thread_count
    - attr: DaemonThreadCount
      field: daemon_thread_count
      