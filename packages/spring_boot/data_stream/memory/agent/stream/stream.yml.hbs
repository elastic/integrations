metricsets: ["jmx"]
namespace: "metrics"
hosts: {{hosts}}
http_method: "GET"
path: {{path}}
username: {{username}}
password: {{password}}
period: {{period}}
{{#if ssl}}
ssl: {{ssl}}
{{/if}}
jmx.mappings:
  - mbean: 'java.nio:name=direct,type=BufferPool'
    attributes:
    - attr: TotalCapacity
      field: buffer_pool.direct.total_capacity
    - attr: MemoryUsed
      field: buffer_pool.direct.memory_used
    - attr: Count
      field: buffer_pool.direct.count    
  - mbean: 'java.nio:name=mapped,type=BufferPool'
    attributes:
    - attr: TotalCapacity
      field: buffer_pool.mapped.total_capacity
    - attr: MemoryUsed
      field: buffer_pool.mapped.memory_used
    - attr: Count
      field: buffer_pool.mapped.count
  - mbean: 'java.lang:type=Memory'
    attributes:
    - attr: HeapMemoryUsage
      field: memory.heap_memory_usage
    - attr: NonHeapMemoryUsage
      field: memory.non_heap_memory_usage
    - attr: ObjectPendingFinalizationCount
      field: memory.object_pending_finalization_count
    - attr: Verbose
      field: memory.verbose
  - mbean: 'java.lang:name=CodeCacheManager,type=MemoryManager'
    attributes:      
    - attr: Valid
      field: memory_manager.code_cache_manager.valid
    - attr: Name
      field: memory_manager.code_cache_manager.name
  - mbean: 'java.lang:name=Metaspace Manager,type=MemoryManager'
    attributes:
    - attr: Valid
      field: memory_manager.metaspace_manager.valid
    - attr: Name
      field: memory_manager.metaspace_manager.name
      