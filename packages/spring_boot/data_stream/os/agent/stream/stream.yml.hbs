metricsets: ["jmx"]
namespace: "metrics"
hosts: {{hosts}}
http_method: "GET"
path: {{path}}
username: {{username}}
password: {{password}}
period: {{period}}
{{#if ssl}}
ssl: {{ssl}}
{{/if}}
jmx.mappings:
  - mbean: 'java.lang:type=OperatingSystem'
    attributes:
    - attr: SystemLoadAverage
      field: operating_system.system.load_average
    - attr: SystemCpuLoad
      field: operating_system.system.cpu_load
    - attr: ProcessCpuLoad
      field: operating_system.process.cpu_load
    - attr: ProcessCpuTime
      field: operating_system.process.cpu_time
    - attr: FreePhysicalMemorySize
      field: operating_system.free.physical_memory_size
    - attr: FreeSwapSpaceSize
      field: operating_system.free.swap_space_size
    - attr: TotalPhysicalMemorySize
      field: operating_system.total.physical_memory_size
    - attr: TotalSwapSpaceSize
      field: operating_system.total.swap_space_size
    - attr: MaxFileDescriptorCount
      field: operating_system.max_file_descriptor_count
    - attr: OpenFileDescriptorCount
      field: operating_system.open_file_descriptor_count
    - attr: CommittedVirtualMemorySize
      field: operating_system.committed_virtual_memory_size
    - attr: Name
      field: operating_system.name
    - attr: Arch
      field: operating_system.arch
    - attr: AvailableProcessors
      field: operating_system.available_processors
    - attr: Version
      field: operating_system.version
  - mbean: 'java.lang:type=Runtime'
    attributes:
    - attr: SpecVendor
      field: runtime.spec.vendor
    - attr: SpecName
      field: runtime.spec.name
    - attr: SpecVersion
      field: runtime.spec.version
    - attr: VmName
      field: runtime.vm.name
    - attr: VmVendor
      field: runtime.vm.vendor
    - attr: VmVersion
      field: runtime.vm.version
    - attr: BootClassPath
      field: runtime.boot_class.path
    - attr: BootClassPathSupported
      field: runtime.boot_class.path_supported
    - attr: Name
      field: runtime.name
    - attr: StartTime
      field: runtime.start_time
    - attr: Uptime
      field: runtime.uptime
    - attr: LibraryPath
      field: runtime.library_path
    - attr: ClassPath
      field: runtime.class_path
    - attr: ManagementSpecVersion
      field: runtime.management_spec_version
    - attr: SystemProperties
      field: runtime.system_properties      
      