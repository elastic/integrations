metricsets: ["jmx"]
namespace: "metrics"
hosts: {{hosts}}
http_method: "GET"
path: {{path}}
username: {{username}}
password: {{password}}
period: {{period}}
{{#if ssl}}
ssl: {{ssl}}
{{/if}}
jmx.mappings:
  - mbean: 'java.lang:type=Threading'
    attributes:
    - attr: ThreadAllocatedMemorySupported
      field: threading.thread.allocated_memory_supported
    - attr: ThreadContentionMonitoringEnabled
      field: threading.thread.contention_monitoring_enabled
    - attr: ThreadAllocatedMemoryEnabled
      field: threading.thread.allocated_memory_enabled
    - attr: ThreadCpuTimeSupported
      field: threading.thread.cpu_time_supported
    - attr: ThreadContentionMonitoringSupported
      field: threading.thread.contention_monitoring_supported
    - attr: ThreadCount
      field: threading.thread.count
    - attr: ThreadCpuTimeEnabled
      field: threading.thread.cpu_time_enabled
    - attr: CurrentThreadAllocatedBytes
      field: threading.current_thread.allocated_bytes
    - attr: CurrentThreadCpuTime
      field: threading.current_thread.cpu_time
    - attr: CurrentThreadUserTime
      field: threading.current_thread.user_time
    - attr: CurrentThreadCpuTimeSupported
      field: threading.current_thread.cpu_time_supported
    - attr: TotalStartedThreadCount
      field: threading.total_started_thread_count
    - attr: ObjectMonitorUsageSupported
      field: threading.object_monitor_usage_supported
    - attr: SynchronizerUsageSupported
      field: threading.synchronizer_usage_supported
    - attr: PeakThreadCount
      field: threading.peak_thread_count
    - attr: DaemonThreadCount
      field: threading.daemon_thread_count
      