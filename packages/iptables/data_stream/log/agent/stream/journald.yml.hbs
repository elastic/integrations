condition: ${host.platform} == 'linux'

{{#if paths}}
paths:
{{#each paths as |path i|}}
  - {{path}}
{{/each}}
{{/if}}

include_matches:
- _TRANSPORT=kernel

tags:
{{#each tags as |tag i|}}
  - {{tag}}
{{/each}}

{{#contains "forwarded" tags}}
publisher_pipeline.disable_host: true
{{/contains}}

processors:
- drop_fields:
    ignore_missing: true
    fields:
      - journald.custom.realtime_timestamp
{{#if processors}}
- drop_event:
    when.not.regexp.message: 'IN=[^ ]* OUT='
{{processors}}
{{/if}}
