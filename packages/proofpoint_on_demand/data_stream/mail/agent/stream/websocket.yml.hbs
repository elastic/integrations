url: {{url}}/v1/stream?cid={{cluster_id}}&type=maillog
auth.bearer_token: {{access_token}}
redact:
  fields: ~
program: |
  bytes(state.response).decode_json().as(body,{
    "events": {
      "message":  body.encode_json(),
    }
  })
{{#if max_reconnect_attempts}}
retry.max_attempts: {{max_reconnect_attempts}}
{{/if}}
{{#if min_wait_time}}
retry.wait_min: {{min_wait_time}}
{{/if}}
{{#if max_wait_time}}
retry.wait_max: {{max_wait_time}}
{{/if}}
{{#if blanket_retries}}
retry.blanket_retries: {{blanket_retries}}
{{/if}}
{{#if infinite_retries}}
retry.infinite_retries: {{infinite_retries}}
{{/if}}
{{#if keep_alive}}
keep_alive.enable: {{keep_alive}}
keep_alive.interval: {{keep_alive_interval}}
{{/if}}
tags:
{{#if preserve_original_event}}
  - preserve_original_event
{{/if}}
{{#if preserve_duplicate_custom_fields}}
  - preserve_duplicate_custom_fields
{{/if}}
{{#each tags as |tag|}}
  - {{tag}}
{{/each}}
{{#contains "forwarded" tags}}
publisher_pipeline.disable_host: true
{{/contains}}
processors:
{{#if processors}}
{{processors}}
{{/if}}
