hosts:
{{#each hosts}}
  - {{this}}
{{/each}}
period: {{period}}
condition: {{ condition }}
{{#if metrics_path}}
metrics_path: {{metrics_path}}
{{/if}}
metrics_filters.exclude:
{{#each metrics_filters.exclude}}
    - {{this}}
{{/each}}
metrics_filters.include:
{{#each metrics_filters.include}}
    - {{this}}
{{/each}}
use_types: true
rate_counters: true
