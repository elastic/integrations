paths:
{{#each paths}}
 - {{this}}
{{/each}}
exclude_files: [".gz$"]
tags:
{{#each tags as |tag i|}}
- {{tag}}
{{/each}}
{{#contains tags "forwarded"}}
publisher_pipeline.disable_host: true
{{/contains}}
processors:
  - add_fields:
      target: '_conf.tenants'
      fields:
          mappings:
{{#each tenant_names as |entry i|}}
            - {{entry.id}}: {{entry.name}}
{{/each}}