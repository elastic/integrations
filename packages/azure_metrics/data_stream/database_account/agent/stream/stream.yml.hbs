                    "TableTableThroughputUpdate","TableTableUpdate"]
            namespace: "Microsoft.DocumentDb/databaseAccounts"
            ignore_unsupported: true
            dimensions:
            - name: "ResourceName"
              value: "*"
    {{/each}}
{{/if}}

