config_version: 2
interval: {{interval}}
{{#if proxy_url}}
resource.proxy_url: {{proxy_url}}
{{/if}}
{{#if ssl}}
resource.ssl: {{ssl}}
{{/if}}
{{#if http_client_timeout}}
resource.timeout: {{http_client_timeout}}
{{/if}}
resource.url: {{url}}
auth.oauth2:
  client.id: {{client_id}}
  client.secret: {{client_secret}}
  token_url: {{token_url}}
  endpoint_params:
    grant_type: client_credentials
  scopes: epo.grps.r
state:
  api_key: {{api_key}}
  batch_size: {{batch_size}}
  want_more: false
program: |
  request("GET", (
    has(state.want_more) && !state.want_more
    ?
      (state.url + "/epo/v2/groups?" + {
        "page[limit]": [string(state.batch_size)]
      }.format_query())
    :
      state.url
  )).with({
    "Header":{
      "Content-Type": ["application/vnd.api+json"],
      "x-api-key": [state.api_key],
    }
  }).do_request().as(resp, bytes(resp.Body).decode_json().as(body, {
    "events": body.data.map(e, {
      "message": e.encode_json(),
    }),
    "url": (
      has(body.links) && has(body.links.next)
      ?
        body.links.next
      :
        state.url.parse_url().Scheme + "://" + state.url.parse_url().Host
    ),
    "want_more": has(body.links) && has(body.links.next),
    "api_key": state.api_key,
    "batch_size": state.batch_size,
  }))
tags:
{{#if preserve_original_event}}
  - preserve_original_event
{{/if}}
{{#if preserve_duplicate_custom_fields}}
  - preserve_duplicate_custom_fields
{{/if}}
{{#each tags as |tag|}}
  - {{tag}}
{{/each}}
{{#contains "forwarded" tags}}
publisher_pipeline.disable_host: true
{{/contains}}
{{#if processors}}
processors:
{{processors}}
{{/if}}
