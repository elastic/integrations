{
  "id": "lock_waits",
  "type": "alerting_rule_template",
  "attributes": {
    "name": "[MicrosoftSQL Server] Lock Waits above threshold",
    "tags": ["MicrosoftSQL Server"],
    "ruleTypeId": ".es-query",
    "schedule": {
      "interval": "1m"
    },
    "params": {
      "searchType": "esqlQuery",
      "timeWindowSize": 15,
      "timeWindowUnit": "m",
      "esqlQuery": {
        "esql": "FROM metrics-microsoft_sqlserver.performance-default\n| STATS lockwaits=avg(mssql.metrics.lock_waits_per_sec) by mssql.metrics.server_name\n| WHERE lockwaits > 100"
      },
      "groupBy": "row",
      "timeField": "@timestamp"
    },
    "alertDelay": {
      "active": 1
    }
  },
  "managed": true,
  "coreMigrationVersion": "8.8.0",
  "typeMigrationVersion": "10.1.0"
}