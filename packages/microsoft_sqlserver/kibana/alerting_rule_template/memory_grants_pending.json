{
  "id": "memory_grants_pending",
  "type": "alerting_rule_template",
  "attributes": {
    "name": "[MicrosoftSQL Server] Memory Grants Pending above Threshold",
    "tags": ["MicrosoftSQL Server",
      "Memory Grants Pending"],
    "ruleTypeId": ".es-query",
    "schedule": {
      "interval": "1m"
    },
    "params": {
      "searchType": "esqlQuery",
      "timeWindowSize": 15,
      "timeWindowUnit": "m",
      "threshold": [
        0
      ],
      "thresholdComparator": "<",
      "size": 100,
      "esqlQuery": {
        "esql": "FROM metrics-microsoft_sqlserver.performance-default\n| STATS memory_grants_pending=MAX(mssql.metrics.memory_grants_pending) by mssql.metrics.server_name\n| WHERE memory_grants_pending > 0"
      },
      "aggType": "count",
      "groupBy": "row",
      "termSize": 5,
      "sourceFields": [],
      "timeField": "@timestamp",
      "excludeHitsFromPreviousRun": true
    },
    "alertDelay": {
      "active": 1
    }
  },
  "managed": true,
  "coreMigrationVersion": "8.8.0",
  "typeMigrationVersion": "10.1.0"
}