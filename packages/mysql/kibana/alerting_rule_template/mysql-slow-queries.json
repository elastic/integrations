{
  "id": "mysql-slow-queries",
  "type": "alerting_rule_template",
  "attributes": {
    "name": "MySQL Slow Queries P95 Latency",
    "tags": ["mysql", "query"],
    "ruleTypeId": ".es-query",
    "schedule": {
      "interval": "1m"
    },
    "params": {
      "searchType": "esqlQuery",
      "timeWindowSize": 15,
      "timeWindowUnit": "m",
      "threshold": [
        0
      ],
      "thresholdComparator": ">",
      "size": 100,
      "esqlQuery": {
        "esql": "FROM metrics-mysql.performance-default\n| STATS p95_ms = max(mysql.performance.events_statements.quantile.95/1e6) BY host.name, mysql.performance.events_statements.query_id, mysql.performance.events_statements.schemaname\n| WHERE p95_ms > 500"
      },
      "aggType": "count",
      "groupBy": "all",
      "termSize": 5,
      "sourceFields": [],
      "timeField": "@timestamp",
      "excludeHitsFromPreviousRun": true
    },
    "alertDelay": {
      "active": 1
    }
  },
  "managed": true,
  "coreMigrationVersion": "8.8.0",
  "typeMigrationVersion": "10.1.0"
}