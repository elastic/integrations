metricsets: ["query"]
period: {{period}}
hosts:
{{#each hosts}}
  - {{this}}
{{/each}}
tags:
{{#each tags as |tag|}}
  - {{tag}}
{{/each}}
{{#if processors}}
processors:
{{processors}}
{{/if}}
{{#if ssl}}
{{ssl}}
{{/if}}
driver: "mysql"
sql_queries:
  - query: {{replication_status_query}}
    response_format: "table"