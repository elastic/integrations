config_version: 2
interval: {{interval}}
{{#if enable_request_tracer}}
request.tracer.filename: "../../logs/httpjson/http-request-trace-*.ndjson"
request.tracer.maxbackups: 5
{{/if}}
request.url: {{url}}/api/dcim/devices
request.method: GET
{{#if proxy_url }}
request.proxy_url: {{proxy_url}}
{{/if}}
{{#if ssl}}
request.ssl: {{ssl}}
{{/if}}
{{#if http_client_timeout}}
request.timeout: {{http_client_timeout}}
{{/if}}
request.transforms:
  - set:
      target: "header.Accept"
      value: "application/json"
  - set:
      target: "header.User-Agent"
      value: "NetBox-Elastic-Filebeat/0.1.0"
  - set:
      target: "header.Authorization"
      value: 'Token {{token}}'
  - set:
      target: "url.params.limit"
      value: '{{limit}}'
  - set:
      target: "url.params.last_updated__gte"
      value: '[[formatDate (parseDate .cursor.last_updated) "2006-01-02T15:04:05Z"]]'
      default: '[[formatDate (now (parseDuration "-{{initial_interval}}")) "2006-01-02T15:04:05Z"]]'
cursor:
  last_updated:
    value: '[[.last_event.last_updated]]'
    ignore_empty_value: true
response.decode_as: application/json
response.split:
  target: body.results
  ignore_empty_value: true
response.pagination:
  - set:
      target: url.value
      value: '[[if index .last_response.body "next"]][[.last_response.body.next]][[end]]'
      fail_on_template_error: true
      do_not_log_failure: true

tags:
{{#if preserve_original_event}}
  - preserve_original_event
{{/if}}
{{#each tags as |tag|}}
  - {{tag}}
{{/each}}
{{#contains "forwarded" tags}}
publisher_pipeline.disable_host: true
{{/contains}}
{{#if processors}}
processors:
{{processors}}
{{/if}}
