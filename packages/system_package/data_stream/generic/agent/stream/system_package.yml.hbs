type: audit/system
dataset:
  - package
{{#if period}}
period: {{period}}
{{/if}}
{{#if state_period}}
state.period: {{state_period}}
{{/if}}
{{#if pipeline}}
pipeline: {{pipeline}}
{{/if}}
