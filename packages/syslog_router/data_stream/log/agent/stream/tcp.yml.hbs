host: "{{listen_address}}:{{listen_port}}"
tags:
  - syslog_router
{{#if preserve_original_event}}
  - preserve_original_event
{{/if}}
{{#each tags as |tag|}}
  - {{tag}}
{{/each}}
{{#contains "forwarded" tags}}
publisher_pipeline.disable_host: true
{{/contains}}
{{#if ssl}}
ssl: {{ssl}}
{{/if}}
processors:
- add_locale: ~
{{#if reroute_targets}}
{{reroute_targets}}
{{/if}}
{{#if processors}}
{{processors}}
{{/if}}
- if:
    equals:
      "_conf.use_syslog": true
  then:
    - drop_fields:
        fields: ["_conf.use_syslog"]
    - syslog:
        field: message
        format: auto
- if:
    equals:
      "_conf.use_decode_cef": true
  then:
    - drop_fields:
        fields: ["_conf.use_decode_cef"]
    - decode_cef:
        field: message
{{#if tcp_options}}
{{tcp_options}}
{{/if}}
