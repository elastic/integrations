title: ProjectDiscovery Cloud
type: httpjson

vars:
  - name: base_url
    type: text
    title: API Base URL
    required: true
    default: https://api.projectdiscovery.io

  - name: api_key
    type: password
    title: API Key
    required: true

  - name: team_id
    type: text
    title: Team ID
    required: true

  - name: interval
    type: text
    title: Collection interval
    required: true
    default: 5m

  - name: batch_size
    type: integer
    title: Batch size
    required: true
    default: 100

  - name: time_window
    type: text
    title: Time window
    required: false
    default: last_day

  - name: http_client_timeout
    type: text
    title: HTTP client timeout
    required: false
    default: 10m

streams:
  - input: httpjson
    title: Vulnerability changelogs
    description: Pulls vuln changelogs from PD Cloud
    vars:
      - name: base_url
      - name: api_key
      - name: team_id
      - name: interval
      - name: batch_size
      - name: time_window
      - name: http_client_timeout
      - name: enable_request_tracer
