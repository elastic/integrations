udp:
host: "{{syslog_host}}:{{syslog_port}}"
tags:
{{#if preserve_original_event}}
  - preserve_original_event
{{/if}}
{{#each tags as |tag i|}}
  - {{tag}}
{{/each}}
{{#contains "forwarded" tags}}
publisher_pipeline.disable_host: true
{{/contains}}
processors:
- add_locale: ~
- rename:
    fields:
      - {from: "message", to: "event.original"}
- decode_cef:
    field: event.original
{{#if processors}}
{{processors}}
{{/if}}
