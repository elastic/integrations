config_version: 2
interval: {{interval}}
{{#if enable_request_tracer}}
request.tracer.filename: "../../logs/httpjson/http-request-trace-*.ndjson"
request.tracer.maxbackups: 5
{{/if}}
request.url: {{url}}/api/public/audit/account/{{account_id}}/auditlogs
request.method: GET
{{#if proxy_url }}
request.proxy_url: {{proxy_url}}
{{/if}}
{{#if ssl}}
request.ssl: {{ssl}}
{{/if}}
{{#if http_client_timeout}}
request.timeout: {{http_client_timeout}}
{{/if}}
request.transforms:
  - set:
      target: header.Private-Token
      value: {{private_token}}
  - set:
      target: url.params.fromdate
      value: '[[ formatDate (now (parseDuration "-{{interval}}")) "RFC3339" ]]'
      default: '[[ formatDate (now (parseDuration "-{{initial_interval}}")) "RFC3339" ]]'
  - set:
      target: url.params.pageSize
      value: 100
response.decode_as: application/json
response.split:
  target: body.auditlogs
  ignore_empty_value: true
response.pagination:
  - set:
      target: url.value
      value: '{{url}}/api/public/audit/account/{{account_id}}[[.last_response.body.next]]'
      fail_on_template_error: true
tags:
{{#if preserve_original_event}}
  - preserve_original_event
{{/if}}
{{#each tags as |tag i|}}
  - {{tag}}
{{/each}}
{{#contains "forwarded" tags}}
publisher_pipeline.disable_host: true
{{/contains}}

{{#if processors}}
processors:
{{processors}}
{{/if}}
